// Jenkinsfile for DPS
node('master') {
   def version = '1.00'
   def started = new Date()
   def jobpath = pwd()
   try {
		 properties([buildDiscarder(logRotator(artifactNumToKeepStr: '25', numToKeepStr: env.BRANCH_NAME == 'production' ? '25' : '25'))])
		
		stage('Checkout') {              
                    checkout scm
             }           
 
		 tokens = "${env.JOB_NAME}".tokenize('/')
		 org = tokens[0]
		 repo = tokens[1]

		 configurationfor = 'debug'
		 if (org == 'DPS'  && env.BRANCH_NAME == 'jenkins_test')
				{
					   configurationfor ='TEST'
				}
		 else if      (org == 'DPS'  && env.BRANCH_NAME == 'jenkins_integ')
				{
					   configurationfor ='INTEG'
				}
		 else if      (org == 'DPS'  && env.BRANCH_NAME == 'jenkins_prod')
				{
					   configurationfor ='PROD'
				}

		 def scannerHome = tool 'SonarMSBuild'
		 stage('Environment') {    
				withSonarQubeEnv('SonarQube') {
					   bat "tools\\nuget restore .\\RailRoadController.sln -Verbosity detailed"
					   bat "dotnet C:\\sonarqube\\sonar-scanner-msbuild-4.5.0.1761-netcoreapp2.0\\SonarScanner.MSBuild.dll begin /k:${repo}:${org} /n:${repo}:${org} /v:${version} /d:sonar.host.url=%SONAR_HOST_URL% /d:sonar.exclusions=**/node_modules/**,**/*.js /d:sonar.cs.nunit.reportsPaths=TestResult.xml /d:sonar.cs.opencover.reportsPaths=coverage.html"
				}
		 }

		 stage('Build') {
				println('dotnet /t:Rebuild src/DPS.sln /p:Configuration='+ configurationfor)
				bat 'dotnet build -c '+ configurationfor + ' .\\RailRoadController.sln /p:DebugType=Full'
		  }

		   stage('Test') {
				def testprj = "${jobpath}\\RailRoadControllerTest\\RailRoadControllerTest.csproj"
				bat "dotnet test \"${testprj}\" -l \"trx;LogFileName=TestResult.xml\""
		 }

		 	 stage('Coverage') {
				def opencover = "${jobpath}\\tools\\Opencover\\Opencover.console.exe"
				def testprj = "${jobpath}\\RailRoadControllerTest\\RailRoadControllerTest.csproj"
				bat "\"${opencover}\" -target:\"dotnet.exe\" -targetargs:\"test\" -output:coverage.html -oldstyle -filter:\"+[RailRoad*]*\""
		 }           
		
	
		 stage('Code Analysis') {
				withSonarQubeEnv('SonarQube') {
					bat "dotnet C:\\sonarqube\\sonar-scanner-msbuild-4.5.0.1761-netcoreapp2.0\\SonarScanner.MSBuild.dll end"
				}
		 }
			
		 stage('Declarative: Post Actions') {
				println("Final")
		 }
   }
   catch (e) {
		 currentBuild.result = "FAILED"
		 throw e
   } finally {
   }     
}
